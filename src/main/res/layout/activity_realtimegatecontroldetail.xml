<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.monitor.RealTimeGateControlDetailActivity"
    >

        <include
            layout="@layout/title_bar"
            android:id="@+id/gatecontroldetail_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gatecontroldetail_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            //四个色块
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/color_54BFFC"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="闸门开关\n次数"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/parcel_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/color_5CB85C"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="累计水量\nm³"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/plan_irrigationWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0.0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/color_EDB65F"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="闸门在线\n个"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/actual_irrigationWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/color_F07E6D"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="闸门异常\n个"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/number_rotationalIrrigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测站名称："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_cname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_4BC4FB"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运行情况："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_runstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_4BC4FB"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备编号："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_4BC4FB"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备厂家："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_cj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_4BC4FB"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="闸前水位（m）："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_qlevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="瞬时流量（m³/s）："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_ssll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="闸门操控模式："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_controltype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="闸门状态："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_gatestatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="闸门高度（m）："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_gateheight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测时间："
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                        <TextView
                            android:id="@+id/tv_gatedetail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/color_666666"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red_bg"
                    android:text="闸门控制"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_bg"
                    android:text="开关记录"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_bg"
                    android:text="监测记录"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_bg"
                    android:text="充值记录"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_bg"
                    android:text="实时图像"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_bg"
                    android:text="闸门升级记录"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    
</RelativeLayout>
