<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activity.login.RegisterActivity"
    >
    <include
        layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用  户  名"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:hint="6-20位字母或字母数字"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textColorHint="@color/bottom_line"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:hint="请填写手机号码"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textColorHint="@color/bottom_line"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_register_securityCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验  证  码"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_register_securityCode"
            android:layout_toRightOf="@id/tv_register_securityCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:hint="6位验证码"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:textColorHint="@color/bottom_line"
            android:minWidth="150dp"
            />
        <TextView
            android:id="@+id/tv_getSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击获取"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="@color/title_bg"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_register_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:textSize="18sp"
            android:textColor="@color/color_333333"/>
        <EditText
            android:id="@+id/et_register_psd"
            android:layout_toRightOf="@id/tv_register_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:hint="8-20位字母数字组合"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColorHint="@color/bottom_line"/>
        <CheckBox
            android:id="@+id/cb_showPsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/eyes_icon_selector"
            />

    </RelativeLayout>

