<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/consult_titleview"
            layout="@layout/title_bar"
            />
        <ScrollView
            android:layout_below="@id/consult_titleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tv_applyadd_stimeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用水开始时间："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_applyadd_beginTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_stimeview"
                        android:hint="点击选择时间"
                        android:textColorHint="@color/color_666666"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/dp_50"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/cx_zk02"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tv_applyadd_etimeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用水结束时间："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_applyadd_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_etimeview"
                        android:hint="点击选择时间"
                        android:textColorHint="@color/color_666666"
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/dp_50"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/cx_zk02"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_applyadd_unitview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收益单位："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyadd_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_unitview"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作物类型"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <Spinner
                            android:id="@+id/spn_applyadd_crop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:minWidth="150dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ico_sy_todown"
                            android:paddingLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_applyadd_irrArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="灌溉面积（万亩）:"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyadd_irrArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_irrArea"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_applyadd_ysll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用水流量（m³/s）："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyadd_ysll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_ysll"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_applyadd_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用水天数："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyadd_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_days"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@android:color/white"
                    >

                    <TextView
                        android:id="@+id/tv_applyadd_water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配水总量（m³）："
                        android:textColor="@color/color_333333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        />
                    <EditText
                        android:id="@+id/et_applyadd_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_applyadd_water"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:background="@android:color/white"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_bg"
                        android:text="批准配水"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/white"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_bg"
                        android:text="拒绝配水"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_blue_bg"
                        android:text="取消"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>
